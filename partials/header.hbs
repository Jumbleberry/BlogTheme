<header class="site-header">
	<div class="inner-wide">
		{{#if @site.logo}}
		<p class="site-logo"><a href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a></p>
		{{/if}}
		{{#is "index"}}
		<h1 class="site-title"><a href="{{@site.url}}">{{@site.title}}</a></h1>
		{{else}}
		<p class="site-title"><a href="{{@site.url}}">{{@site.title}}</a></p>
		{{/is}}
		{{#if @site.navigation}}
			{{navigation}}
		{{/if}}
		<a class="search-toggle" href="#"><span class="screen-reader-text">Search</span><span class="icon-search" aria-hidden="true"></span></a>
		<a class="sidebar-toggle" href="#"><span class="screen-reader-text">Open Sidebar</span><span class="icon-nav-custom" aria-hidden="true"></span></a>
	</div><!-- .inner-wide -->
</header><!-- .site-header -->

<footer class="site-footer">
	<div class="inner-wide">
		<div class="site-footer-inside">

			<div class="offsite-links">
				{{#if @site.facebook}}
				<a href="{{facebook_url}}" class="square light" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
				{{/if}}
				{{!-- Manually include your desired social links. --}}
				<a href="https://www.instagram.com/jumbleberrynetwork" class="square light" target="_blank" rel="noopener">{{> "icons/instagram"}}</a>
				<a href="https://www.linkedin.com/company/jumbleberry" class="square light" target="_blank" rel="noopener">{{> "icons/linkedin"}}</a>
				<a href="{{@site.url}}/rss/" class="square light" target="_blank" rel="noopener">{{> "icons/rss"}}</a>
			</div><!-- .offsite-links -->

			<div class="site-info">
                <br/>
				<a href="{{@site.url}}">{{@site.title}}</a> &copy; {{date format="YYYY"}}
			</div><!-- .site-info -->

			<a href="#page" id="top-link" class="top-link square"><span class="icon-angle-up" aria-hidden="true"></span><span class="screen-reader-text">{{t "Back to top"}}</span></a>

		</div><!-- .site-footer-inside -->
	</div><!-- .inner-wide -->
</footer><!-- .site-footer -->
